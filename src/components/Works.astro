---
import { getCollection } from 'astro:content';
import WorkItem from './WorkItem.astro';

const works = await getCollection('works');
const sortedWorks = works.sort((a, b) => b.data.sortDate - a.data.sortDate);
---

<section id="works-list">
  <div class="backline">
    <div class="line"></div>
  </div>
  <div class="items">
    {sortedWorks.map((work, index) => (
      <WorkItem work={work} />
    ))}
  </div>
</section>

<style>
  #works-list {
    width: 100%;
    height: auto;
    position: relative;
    margin-top: 20px;
    padding: 50px 0;
  }

  .backline {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .line {
    width: calc(50% + 0.5px);
    height: 100%;
    border-right: 1px #4e1a68 solid;
  }

  .items {
    width: 1000px;
    position: relative;
    left: 0;
    right: 0;
    margin: auto;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
    padding: 0 20px;
    box-sizing: border-box;
  }

  @media screen and (max-width: 768px) {
    .items {
      width: 100%;
      padding: 0 10px;
    }
  }
</style>
